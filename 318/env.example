# 新都桥旅行网站环境变量配置示例
# 复制此文件为 .env 并根据需要修改配置

# 时区设置
TZ=Asia/Shanghai

# 服务端口配置
HTTP_PORT=80
HTTPS_PORT=443

# Nginx配置
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# 日志级别
LOG_LEVEL=warn

# 网站配置
SITE_NAME=新都桥旅行
SITE_DOMAIN=318.yongli.wang
SITE_DESCRIPTION=高原秘境静态旅行指南

# 安全配置
ENABLE_SECURITY_HEADERS=true
ENABLE_GZIP=true

# 缓存配置
CACHE_STATIC_ASSETS=true
CACHE_DURATION=1y

# 监控配置
ENABLE_MONITORING=false
PROMETHEUS_PORT=9113

# 代理配置
ENABLE_PROXY=false
PROXY_PORT=8080

# 开发模式
DEBUG_MODE=false
